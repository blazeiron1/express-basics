<%- include('partials/header') %>

<div class="row">
    <div class="offset-md-2 col-md-8 text-center">
        <h3>
            List of Movies to be reviewed in 2022
        </h3>
    </div>
    <div class="col-md-2">
        <button class="btn btn-sm btn-outline-primary">+ Add</button>
    </div>
</div>
<div class="movies-list">
    <div class="row">
        <% for(var i = 0; i < movies.length; i++) {%>

            <div class=" col-12 col-sm-6col-md-4 col-lg-3">
                <div class="card mb-2">
                    <img src="https://place-hold.it/500" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <a href="/movies/<%- movies[i].id%>"><%- movies[i].title%></a>
                        <p class="card-text"><%- movies[i].actor%></p>
                        <p class="card-text"><small class="text-muted"><%- movies[i].time%></small></p>
                    </div>
                </div>

            </div>
        <% } %>
    </div>
</div>
<%- include('partials/footer') %>
